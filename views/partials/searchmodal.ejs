<div class="modal fade" id="findafair" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
   
    <!-- <div class="modal-custom" style="background-color: #fff; height:400px;"> -->
         <div class="modal-content">
          <div class="modal-dialog">
            <div class="modal-header" align="center">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                 </button>
                <form id='search-form' method="POST" action="/search">   
                  <div class="modal-body">
                    <div id="div-login-msg">
                        <!-- Begin # search Form -->
                        <span id="text-login-msg">Search for a fair by state or country</span>
                        </br>
                        </br>
                        <label class="modallabels">Enter a state</label>
                        <input id="search-by-state" class="form-control" type="text" placeholder="State" name="state"> 
                        <label class="modallabels">Enter a country</label>
                        <input id="search-by-country" class="form-control" type="text" placeholder="defaults to United States" name="country" defaultvalue="United States of America" >     
                        <div class="modal-footer">
                            <div>
                                <button id="searchsubmit" type="submit" class="btn btn-primary btn-lg btn-block">Search</button>
                            </div>
                        </div>
                    </div>
                </form> 
            </div>
        </div>
    </div>
    <!-- </div> -->
</div>

<!-- End # Login Form -->

